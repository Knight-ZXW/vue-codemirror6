{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-codemirror6",
  "version": "0.3.0",
  "description": "CodeMirror6 Component for vue 2 / 3",
  "keywords": [
    "vuejs",
    "vue",
    "vue-components",
    "vue-codemirror",
    "code-editor",
    "text-editor",
    "vue2",
    "web-editor",
    "vue-plugin",
    "vue-component",
    "codemirror-editor",
    "vue-resource",
    "codemirror6"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-codemirror6",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-codemirror6.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-codemirror6/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "main": "./dist/vue-codemirror6.umd.js",
  "module": "./dist/vue-codemirror6.es.js",
  "browser": {
    "./sfc": "./src/components/CodeMirror.vue"
  },
  "exports": {
    ".": {
      "import": "./dist/vue-codemirror6.es.js",
      "require": "./dist/vue-codemirror6.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "/dist",
    "/src/components/CodeMirror.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build & vue-tsc",
    "build:clean": "rimraf dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "lint:markup": "vue-tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "npx vue-demi-fix"
  },
  "dependencies": {
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.9",
    "vue": "^2.6.14"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/lang-markdown": "^0.19.6",
    "@codemirror/language": "^0.19.8",
    "@codemirror/lint": "^0.19.6",
    "@codemirror/view": "^0.19.47",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-vue": "^8.5.0",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "lodash": "^4.17.21",
    "prettier": "^2.6.0",
    "prettier-plugin-jsdoc": "^0.3.31",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "prettier-plugin-sort-imports": "^1.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vite-dts": "^1.0.4",
    "vite-plugin-eslint": "^1.3.0",
    "vue": "^3.2.31",
    "vue-eslint-parser": "^8.3.0",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.33.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  }
}
